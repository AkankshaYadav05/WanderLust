<% layout("/layouts/boilerplate") -%>

<body>
   
    <br>
    <div class="row mt-3" >
        <div class="col-8 offset-2">
    <h3>Create a new Listing</h3>
    <form method="POST" action="/listings" noValidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="mb-3">
            <lable for="title" class="form-label"> Title</lable>
            <input 
            name="listing[title]" 
            placeholder="Enter title" 
            type="text" 
            class="form-control"
            required
            />

            <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
            <lable for="description" class="form-label" >Description</lable>
            <textarea 
             name="listing[description]" 
             class="form-control" 
             required
             ></textarea>
            <div class="invalid-feedback">Please enter a short Description</div>

        </div>
        

        <div class="mb-3">
            <lable for="image" class="form-label">Upload Listing Image</lable>
            <input name="listing[image][url]" type="file" class="form-control">
        </div>


        <div class="row">
            <div class="mb-3 col-md-5">
            <lable for="price" class="form-label" >Price</lable>
            <input name="listing[price]" placeholder="1200"  class="form-control" required />
            <div class="invalid-feedback">Please enter valid Price</div>
            </div>

            <div class="mb-3 col-md-5">
            <label for="category">Category</label>
            <br/>
            <select name="listing[category]" id="category" class="category-bar" required >
                <option value=""><b>Select Category</b></option>
                <option value="mountains">Mountains</option>
                <option value="beach">Beach</option>
                <option value="iconic-city">Iconic City</option>
                <option value="room">Room</option>
                <option value="castles">Castles</option>
                <option value="amazing-pools">Amazing Pools</option>
                <option value="camping">Camping</option>
                <option value="farms">Farms</option>
                <option value="artic">Artic</option>
                <option value="domes">Domes</option>
                <option value="boats">Boats</option>
            </select>
            </div>

        </div>
        

     
        <div class="row">
        <div class="mb-3 col-md-8">
            <lable for="location" class="form-label" >Location</lable>
            <input name="listing[location]" placeholder="Delhi" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter Location </div>
        </div>
        
        <div class="mb-3 col-md-4">
            <lable for="country" class="form-label">Country</lable>
            <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter country name</div>

        </div>

        </div>

       
    
        <button class="btn btn-dark add-btn mt-3">Add</button>

    </form>
    </div>
    </div>

    
</body>
