<% layout("/layouts/boilerplate") -%>

<body>

    <script>
        const mapToken = "<%= process.env.MAP_TOKEN %>";
        const listing = <%- JSON.stringify(listing) %>;
    </script>

    <div class="row">
      <div class="container mt-4 offset-1 col-10">
  <!-- Image -->
  <div class="card show-card mb-4">
    <img src="<%= listing.image.url %>" alt="listing-image" class="card-img-top show-img" />
  </div>

  <!-- Flex Row: Left (Details) | Right (Price & Reserve) -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start gap-4 px-1 px-md-3">
    
    <!-- LEFT: Listing Info + Rating Summary -->
    <div class="listing-details-box flex-fill">
      <p class="text-muted mb-1"><strong><em>Owned By:–</em></strong> <em><%= listing.owner.username %></em></p>
      <p class="text-muted mb-1">Location: <%= listing.location %>, <%= listing.country %></p>

      <!-- Star Rating Summary -->
      <div class="rating-summary mt-3">
        <span class="star">⭐</span>
        <span class="rating-value"><%= listing.rating %></span>
        <span class="review-count text-muted">(<%= listing.reviews.length %> reviews)</span>
      </div>
    </div>

    <!-- RIGHT: Booking Card -->
    <div class="price-booking">
      <div class="price-display">
        ₹<%= listing.price.toLocaleString("en-IN") %>
        <span class="per-night">/night</span>
      </div>
      <a href="/listings/<%= listing.id %>/booking" class="reserve-btn">Reserve Now</a>
    </div>
    
  </div>
</div>



    <div class="section about-section offset-1 col-10">
      <h3>About this place</h3>
      <p><%= listing.description %></p>
    </div>


    <!-- Add offers section below this -->
   <div class="section offers-section offset-1 ms-6 mt-4 col-10">
    <h3 class="mb-3">What this place offers</h3>
    
    <% if (listing.facilities && listing.facilities.length > 0) { %>
        <div class="d-flex flex-wrap gap-2">
            <% listing.facilities.forEach(facility => { %>
                <div class="border rounded px-3 py-2 d-flex align-items-center shadow-sm" style="min-width: 160px;">
                    <span ><%= facility %></span>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p>No specific facilities listed yet.</p>
    <% } %>
    </div>


   <!-- Host Section -->
<div class="container mt-5 offset-1 ms-6 col-10">
  <h4 class="mb-4"><b>Meet your host</b></h4>

  <!-- Host Card -->
  <div class="p-4 border rounded shadow-sm bg-white">
    <div class="d-flex justify-content-between align-items-start flex-wrap">
      
      <!-- Avatar & Info -->
      <div class="d-flex">
        <img src="https://i.pravatar.cc/72?u=<%= listing.owner._id %>" class="rounded-circle me-3" width="72" height="72" alt="host avatar">
        <div>
          <h5 class="mb-0"><b><%= listing.owner.username %></b></h5>
          <small class="text-muted d-block">Host</small>
          <small class="text-muted">Response rate: 100% · Response time: within an hour</small>
        </div>
      </div>

      <!-- Contact Host Button -->
      <div class="mt-3 mt-md-0">
        <button class="btn btn-light border rounded-pill px-4 py-2 fw-semibold">Contact Host</button>
      </div>
    </div>

    <!-- Host Description -->
    <div class="mt-4">
      <p>
        Hi, I’m <%= listing.owner.username %>! I love hosting and sharing my beautiful home with guests.
        I’m always available to answer questions and ensure you have a fantastic stay.
        Looking forward to welcoming you!
      </p>
    </div>
  </div>
</div>


 
<div class="col-10 offset-1 ms-6 mb-3">
  <% if (currUser) { %>
    <br>
    <div class="col-8">
      <a class="btn btn-outline-dark" onclick="showReviewForm(event)">Leave a Review</a>

      <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation mt-3" id="review-form" style="display: none;">
        <div class="mb-3 mt-3">
          <h4><b>Leave a Review</b></h4>

          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-grow">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
          <div class="invalid-feedback">
            Please add some comments for review
          </div>
        </div>

        <button type="submit" class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
    <br>
  <% } %>
<br>
  <h4 class="mb-4"><b>Reviews</b></h4>


  <div class="row">
    <% listing.reviews.forEach(review => { %>
      <div class="col-md-6 mb-4"> 
        <div class="border rounded p-3 shadow-sm h-100">
          <div class="d-flex align-items-center mb-2">
            <img 
                src="https://i.pravatar.cc/48?u=<%= review.author._id %>" 
                class="rounded-circle me-3" 
                width="48" 
                height="48" 
                alt="avatar" 
            />
            <div>
              <h6 class="mb-0"><b><%= review.author.username %></b></h6>
              <small class="text-muted"><%= new Date(review.createdAt).toLocaleDateString() %></small>
            </div>
          </div>

          <div class="text-warning mb-2">
            <% for (let i = 0; i < 5; i++) { %>
              <i class="fa<%= i < review.rating ? 's' : 'r' %> fa-star"></i>
            <% } %>
          </div>

          <p><%= review.comment.length > 250 ? review.comment.slice(0, 250) + '...' : review.comment %></p>

          <% if (currUser && currUser._id.equals(review.author._id)) { %>
            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>
</div>

    <div class="col-10 offset-1 mb-3">
        <h3>Where you'll be</h3>
        <div id="map"></div>
    </div>


    

 <script src="../js/map.js"></script>
</body>
