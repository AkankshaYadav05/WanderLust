<% layout("/layouts/boilerplate") -%>

<div class="row mt-3 login offset-4">
    <h2 class="col-6 offset-2"><b>Login</b></h2>
    <div class="col-10 inner-login">
        <form action="/login" method="POST" novalidate class="needs-validation" >

            <div class="mb-3">
            <lable for="username" class="form-label"> Username</lable>
            <input 
                name="username" 
                id="username"
                type="text" 
                class="form-control"
                required
            />

            <div class="mb-3">
            <lable for="password" class="form-label"> Password </lable>
            <input 
                name="password" 
                id="password"
                type="password" 
                class="form-control "
                required
            >
            
                <br/>
            <button class="btn btn-danger">Login</button>

        </div>
        </form>
    </div>
</div>

